<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/tv_yistv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_yistv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_yistv_hint"
        android:layout_alignLeft="@+id/tv_yistv_hint"
        android:layout_marginRight="44dp"
        android:gravity="bottom"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tv_yistv_content"
        android:layout_alignParentRight="true"
        android:scaleType="fitEnd" />

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tv_yistv_content"
        android:layout_alignParentRight="true"
        android:background="@android:color/white"
        android:indeterminateTint="@android:color/black"
        android:visibility="gone" />

    <View
        android:id="@+id/v_y_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_yistv_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/tv_y_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_y_line"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical"
        android:textSize="10sp" />

</RelativeLayout>