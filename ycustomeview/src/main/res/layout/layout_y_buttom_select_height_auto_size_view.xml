<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_y_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:textSize="10sp"
        tools:text="提示" />

    <TextView
        android:id="@+id/tv_y_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_y_hint"
        android:layout_alignLeft="@+id/tv_y_hint"
        android:layout_gravity="left"
        android:gravity="bottom"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="内容" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_y_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:scaleType="fitEnd" />


    <View
        android:id="@+id/v_y_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_y_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/tv_y_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_y_line"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:textSize="10sp"
        tools:text="报错" />
</RelativeLayout>